<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:backgroundTint="#D8D8D8"
        android:id="@+id/card_view_verpedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10sp"
        card_view:cardElevation="20dp"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTipoPedidoPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtNumPedidoPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/txtTipoPedidoPJ"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtStatusPedidoPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Status"
                android:layout_marginRight="10dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/NomeClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNumPedidoPJ"
                android:text="Nome: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtNomePedidoPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/NomeClientePedido"
                android:layout_below="@+id/txtNumPedidoPJ"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Nome"/>

            <TextView
                android:id="@+id/EmailClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NomeClientePedido"
                android:text="Email: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtEmailPedidoPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/EmailClientePedido"
                android:layout_below="@+id/NomeClientePedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Email"/>

            <TextView
                android:id="@+id/informacaoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmailPedidoPJ"
                android:text="INFORMAÇÃO DO PEDIDO:"
                android:layout_marginTop="18dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtInfoPedidoPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/informacaoPedido"
                android:text="INFORMAÇÃO"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>