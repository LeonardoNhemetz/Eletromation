<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:background="#151A7777">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_getpedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10sp"
        card_view:cardElevation="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/Pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido: #"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textSize="17dp"
                android:textColor="#1A7777"
                android:layout_toRightOf="@+id/Pedido"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPedido"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:textColor="#1A7777"
                android:textSize="15dp"
                android:text="Email" />

            <TextView
                android:id="@+id/txtStatusPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Status"
                android:textColor="#1A7777"
                android:layout_marginRight="10dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tipopedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:text="Tipo do problema: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtTipoPedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tipopedidoPedido"
                android:layout_below="@+id/txtEmail"
                android:layout_marginTop="15dp"
                android:textColor="#1A7777"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Tipo"/>



            <TextView
                android:id="@+id/informacaoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipopedidoPedido"
                android:text="INFORMAÇÃO DO PEDIDO:"
                android:layout_marginTop="18dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtInfoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/informacaoPedido"
                android:text="INFORMAÇÃO"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>