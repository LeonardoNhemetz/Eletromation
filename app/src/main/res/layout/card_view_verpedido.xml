<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:orientation="vertical"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_verpedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10sp"
        card_view:cardElevation="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



            <TextView
                android:id="@+id/txtPedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/Pedido"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtStatusPedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Status"
                android:layout_marginRight="10dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tipopedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPedidoPedido"
                android:text="Tipo do problema: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"/>



            <TextView
                android:id="@+id/DataPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipopedidoPedido"
                android:text="Data do pedido: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtDataPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/DataPedido"
                android:layout_below="@+id/txtTipoPedidoPedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="##/##/##"/>

            <TextView
                android:id="@+id/NomeClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HoraPedido"
                android:text="Nome: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtNomeClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/NomeClientePedido"
                android:layout_below="@+id/HoraPedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Nome"/>

            <TextView
                android:id="@+id/EmailClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NomeClientePedido"
                android:text="Email: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtEmailClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/EmailClientePedido"
                android:layout_below="@+id/NomeClientePedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Email"/>

            <TextView
                android:id="@+id/EnderecoClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EmailClientePedido"
                android:text="Endereço: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtEnderecoClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/EnderecoClientePedido"
                android:layout_below="@+id/EmailClientePedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Endereço"/>

            <TextView
                android:id="@+id/CelularClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EnderecoClientePedido"
                android:text="Celular: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtCelularClientePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/CelularClientePedido"
                android:layout_below="@+id/EnderecoClientePedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Celular"/>

            <TextView
                android:id="@+id/HoraPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DataPedido"
                android:text="Hora do pedido: "
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtHoraPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/HoraPedido"
                android:layout_below="@+id/DataPedido"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Hora"/>

            <TextView
                android:id="@+id/txtTipoPedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tipopedidoPedido"
                android:layout_below="@+id/txtPedidoPedido"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="Tipo"/>

            <TextView
                android:id="@+id/informacaoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CelularClientePedido"
                android:text="INFORMAÇÃO DO PEDIDO:"
                android:layout_marginTop="18dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtInfoPedidoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/informacaoPedido"
                android:text="INFORMAÇÃO"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/IVfoto"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/txtInfoPedidoPedido"


                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


<Button
    android:id="@+id/btnRepAudio"
    android:layout_width="200dp"
    android:layout_height="55dp"
    android:text="Reproduzir Audio"
    android:layout_gravity="center"
    android:background="@drawable/enter_button"
    android:textStyle="normal"
    android:textColor="#fff"
    android:layout_marginTop="10dp"
    />

</LinearLayout>