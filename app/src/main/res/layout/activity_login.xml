<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/bgdentro"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <ImageView
        android:id="@+id/imvlogo"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"

        android:background="@drawable/logo_horizontal3"
        />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/imvlogo"
            android:background="@drawable/white_retangle"

            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/txtLogin"
                android:hint="Login"
                android:inputType="textAutoComplete"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/character"
                android:textSize="18dp"
                android:drawablePadding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/txtSenha"
                android:hint="Senha"
                android:inputType="textPassword"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/lock"
                android:textSize="18dp"
                android:drawablePadding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />


            <Button
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:text="Entrar"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:id="@+id/btnEntrarComoCliente"
                android:focusable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEsqueceuSenha"
                android:text="Esqueci minha senha"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>



            <Button
                android:id="@+id/btnCriarConta"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:background="@drawable/enter_button"
                android:focusable="true"
                android:text="AINDA NÃƒO TEM UMA CONTA?"
                android:textStyle="normal"
                android:textColor="#FFFF0D"
                />



        </LinearLayout>



</RelativeLayout>